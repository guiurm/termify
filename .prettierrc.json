{
  "semi": true,
  "tabWidth": 4,
  "singleQuote": false,
  "printWidth": 120,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["./src/**/*.ts"],
      "options": {
        "semi": true,
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "none",
        "bracketSpacing": true,
        "bracketSameLine": true,
        "arrowParens": "avoid",
        "endOfLine": "auto",
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["./src/**/*.json"],
      "options": {
        "semi": true,
        "tabWidth": 2,
        "singleQuote": false,
        "printWidth": 180,
        "trailingComma": "none"
      }
    },
    {
      "files": ["**/*"],
      "options": {}
    }
  ]
}
